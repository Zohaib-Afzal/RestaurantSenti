<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.FragmentHome"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/text_view_top_rated_restaurants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Top Rated Reviews"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_top_rated_restaurants"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:layout_below="@id/text_view_top_rated_restaurants"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/text_view_top_rated_reviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Newly Added Restaurants"
        android:textSize="20sp"
        android:layout_below="@id/recycler_view_top_rated_restaurants"
        android:layout_marginTop="10dp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_top_rated_reviews"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:layout_below="@id/text_view_top_rated_reviews"
        android:layout_marginTop="10dp"
        />
        <TextView
            android:id="@+id/text_view_newly_added_restaurants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Top Rated Restaurants"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:layout_below="@id/recycler_view_top_rated_reviews"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_newly_added_restaurants"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal"
            android:layout_below="@+id/text_view_newly_added_restaurants"
            android:layout_marginTop="10dp"
            />

    </RelativeLayout>
</ScrollView>
